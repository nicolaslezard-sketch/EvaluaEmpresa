generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum ReportStatus {
  PENDING_PAYMENT
  PAID
  GENERATING
  DELIVERED
  FAILED
}

enum SubscriptionStatus {
  PENDING
  AUTHORIZED
  PAUSED
  CANCELLED
  EXPIRED
  FAILED
}

enum ExecutiveCategory {
  SOLIDO
  ESTABLE
  VULNERABLE
  CRITICO
}

enum EvaluationTier {
  PYME
  EMPRESA
}

enum EntitlementSource {
  REPORT_UNLOCK
  SUBSCRIPTION
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique

  subscription Subscription?
  companies  Company[]
  reports    ReportRequest[]

  reportUnlocks ReportUnlock[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Company {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  reports   ReportRequest[]

  createdAt DateTime @default(now())
}

model Subscription {
  id        String   @id @default(cuid())
  status    SubscriptionStatus @default(PENDING)

  tier      EvaluationTier

  mpPreapprovalId String? @unique
  mpStatus        String?

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([tier])
}

model ReportUnlock {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  reportId  String
  report    ReportRequest @relation(fields: [reportId], references: [id])

  source    EntitlementSource @default(REPORT_UNLOCK)

  createdAt DateTime @default(now())

  @@unique([userId, reportId])
  @@index([reportId])
}

model ReportRequest {
  id        String   @id @default(cuid())

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  userId String?
  user   User? @relation(fields: [userId], references: [id])

  email     String
  title     String?

  tier      EvaluationTier

  formData  Json
  reportData Json?

  status    ReportStatus @default(PENDING_PAYMENT)

  mercadopagoPaymentId String? @unique
  mercadopagoStatus    String?
  paidAt               DateTime?

  overallScore      Float?
  executiveCategory ExecutiveCategory?

  financialScore    Float?
  commercialScore   Float?
  operationalScore  Float?
  legalScore        Float?
  strategicScore    Float?

  formalId    String? @unique
  verifyCode  String? @unique
  deliveredAt DateTime?

  pdfKey   String?
  pdfSize  Int?
  pdfMime  String?

  lastError String?
  attempts  Int    @default(0)

  unlocks ReportUnlock[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([email])
  @@index([userId])
  @@index([companyId])
  @@index([tier])
  @@index([overallScore])
}
