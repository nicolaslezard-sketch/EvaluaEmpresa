generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ReportStatus {
  PENDING_PAYMENT
  PAID
  GENERATING
  DELIVERED
  FAILED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  plan      String   @default("free")

  reports   ReportRequest[]

  createdAt DateTime @default(now())
}

model ReportRequest {
  id        String   @id @default(cuid())

  email     String
  title     String?
  formData  Json

  status    ReportStatus @default(PENDING_PAYMENT)

  mercadopagoPaymentId String? @unique
  mercadopagoStatus    String?
  paidAt               DateTime?

  // ✅ legacy (no romper)
  reportText String?

  // ✅ NUEVO: JSON estructurado obligatorio (cuando DELIVERED)
  reportData Json?

  // ✅ NUEVO: scores persistidos para UX premium + ordenamientos
  overallScore     Float?
  riskLevel        String?

  financialScore   Float?
  commercialScore  Float?
  operationalScore Float?
  legalScore       Float?
  strategicScore   Float?

  pdfKey   String?
  pdfSize  Int?
  pdfMime  String?

  lastError String?
  attempts  Int    @default(0)

  userId String?
  user   User? @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([email])
  @@index([userId])
  @@index([overallScore])
}
