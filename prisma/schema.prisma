generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/* =========================
   ENUMS
========================= */

enum SubscriptionPlan {
  FREE
  PRO
  BUSINESS
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
  EXPIRED
}

enum CompanyStatus {
  ACTIVE
  ARCHIVED
  ARCHIVED_BY_PLAN
}

enum EvaluationStatus {
  DRAFT
  FINALIZED
  EXPIRED
}

enum ExecutiveCategory {
  SOLIDO
  ESTABLE
  VULNERABLE
  CRITICO
}

enum CriticalityLevel {
  LOW
  MEDIUM
  HIGH
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

/* =========================
   NEXTAUTH MODELS
========================= */

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  subscription  Subscription?
  companies     Company[]
  unlocks       EvaluationUnlock[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}


model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PaymentEvent {
  id        String   @id @default(cuid())
  provider  String
  externalId String
  type      String
  payload   Json
  createdAt DateTime @default(now())

  @@unique([provider, externalId])
}

/* =========================
   SUBSCRIPTION
========================= */

model Subscription {
  id        String   @id @default(cuid())

  plan      SubscriptionPlan   @default(FREE)
  status    SubscriptionStatus @default(ACTIVE)

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([plan])
  @@index([status])
}

/* =========================
   COMPANY
========================= */

model Company {
  id        String   @id @default(cuid())

  name          String
  relationType  String
  sector        String?
  size          String?
  criticality   CriticalityLevel @default(MEDIUM)

  description   String? @db.Text

  status        CompanyStatus @default(ACTIVE)

  ownerId       String
  owner         User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  evaluations   Evaluation[]
  alerts        Alert[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([ownerId])
  @@index([status])
}

/* =========================
   EVALUATION
========================= */

model Evaluation {
  id        String   @id @default(cuid())

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  status    EvaluationStatus @default(DRAFT)

  /* Versionado del motor */
  engineVersion String @default("1.0.0")

  /* Formulario estructurado */
  formData  Json

  /* Scores determin√≠sticos */
  overallScore      Float?
  executiveCategory ExecutiveCategory?

  financialScore    Float?
  commercialScore   Float?
  operationalScore  Float?
  legalScore        Float?
  strategicScore    Float?

  /* Deltas */
  deltaOverall      Float?
  deltaFinancial    Float?
  deltaCommercial   Float?
  deltaOperational  Float?
  deltaLegal        Float?
  deltaStrategic    Float?

  /* Informe narrativo IA */
  reportData Json?

  /* PDF opcional */
  pdfKey   String?
  pdfSize  Int?
  pdfMime  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  unlocks EvaluationUnlock[]
  alerts  Alert[]

  @@index([companyId])
  @@index([status])
  @@index([engineVersion])
}

/* =========================
   ALERTS
========================= */

model Alert {
  id        String   @id @default(cuid())

  companyId   String
  company     Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  evaluationId String?
  evaluation   Evaluation? @relation(fields: [evaluationId], references: [id])

  severity    AlertSeverity
  type        String
  message     String @db.Text

  createdAt   DateTime @default(now())

  @@index([companyId])
  @@index([severity])
  @@index([evaluationId])
}

/* =========================
   ONE-TIME UNLOCK
========================= */

model EvaluationUnlock {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  evaluationId  String
  evaluation    Evaluation @relation(fields: [evaluationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, evaluationId])
  @@index([evaluationId])
}
