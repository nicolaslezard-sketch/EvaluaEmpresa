generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ReportStatus {
  PENDING_PAYMENT
  PAID
  GENERATING
  DELIVERED
  FAILED
}

enum SubscriptionStatus {
  PENDING
  AUTHORIZED
  PAUSED
  CANCELLED
  EXPIRED
  FAILED
}

enum ExecutiveCategory {
  SOLIDO
  ESTABLE
  VULNERABLE
  CRITICO
}

enum EvaluationTier {
  PYME
  EMPRESA
}

enum EntitlementSource {
  REPORT_UNLOCK
  SUBSCRIPTION
}

/* =========================
   NEXTAUTH CORE MODELS
========================= */

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  subscription  Subscription?
  companies     Company[]
  reports       ReportRequest[]
  reportUnlocks ReportUnlock[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/* =========================
   BUSINESS MODELS
========================= */

model Company {
  id        String   @id @default(cuid())
  name      String

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  reports   ReportRequest[]

  createdAt DateTime @default(now())
}

model Subscription {
  id        String   @id @default(cuid())
  status    SubscriptionStatus @default(PENDING)

  tier      EvaluationTier

  mpPreapprovalId String? @unique
  mpStatus        String?

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([tier])
}

model ReportRequest {
  id        String   @id @default(cuid())

  /* ðŸ”’ Ahora OBLIGATORIO */
  userId String
  user   User   @relation(fields: [userId], references: [id])

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  email     String
  title     String?

  tier      EvaluationTier

  formData  Json
  reportData Json?

  status    ReportStatus @default(PENDING_PAYMENT)

  mercadopagoPaymentId String? @unique
  mercadopagoStatus    String?
  paidAt               DateTime?

  overallScore      Float?
  executiveCategory ExecutiveCategory?

  financialScore    Float?
  commercialScore   Float?
  operationalScore  Float?
  legalScore        Float?
  strategicScore    Float?

  formalId    String? @unique
  verifyCode  String? @unique
  deliveredAt DateTime?

  pdfKey   String?
  pdfSize  Int?
  pdfMime  String?

  lastError String?
  attempts  Int    @default(0)

  unlocks ReportUnlock[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([userId])
  @@index([companyId])
  @@index([tier])
  @@index([overallScore])
}

model ReportUnlock {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  reportId  String
  report    ReportRequest @relation(fields: [reportId], references: [id])

  source    EntitlementSource @default(REPORT_UNLOCK)

  createdAt DateTime @default(now())

  @@unique([userId, reportId])
  @@index([reportId])
}
